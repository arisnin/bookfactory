<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bf.mapper.OrderMapper">
	<resultMap type="com.bf.book.dto.HomeDto" id="HomeDto">
		<result column="authorName" property="authorName"/>
		<result column="bookName" property="bookName"/>
	</resultMap>
	<delete id="delete_cartWishtList" parameterType="int">
		delete from cart
		where BOOK_NUM = #{num}
	</delete>

	<insert id="insert_cartWishList" parameterType="int">
		INSERT INTO
		wishlist VALUES(100,'abc',#{num})
	</insert>

	<select id="getCart" parameterType="String" resultType="com.bf.book.dto.HomeDto">
		<![CDATA[
		select bookm.*, bookm.name "bookName", AUTHOR.name "authorName" 
		from bookm, cart, AUTHOR 
		where cart.BOOK_NUM = bookm.BOOK_NUM 
		and cart.id = #{id} 
		and AUTHOR.NUM=bookm.AUTHOR_NUM
		]]>
	</select>

	<insert id="insertCart" parameterType="java.util.HashMap">
		insert into cart
		values(cart_num_seq.nextval, #{id}, #{bookNum})
	</insert>
</mapper>